<% include ../partials/header %>
<body>
<div id="wrap" class="">
<% include ../partials/navBar %>
<% include ../partials/flash %>

<div class="container"><!-- start of main container -->
  <div class="row"><!-- start of main row -->
    <h1 style="text-align:center;">Edit: <%=invite.title%> </h1>
    <div style="width:30%; margin:0 auto;">
      <form action="/invites/<%=invite._id %>/?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="invite[title]" value="<%=invite.title %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="invite[attending]" value="<%=invite.attending %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="invite[numberInAttendance]" value="<%=invite.numberInAttendance %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="invite[vegetarianMeals]" value="<%=invite.vegetarianMeals %>">
        </div>
        <div class="form-group">
          <button class="btn btn-block btn-lg btn-primary">Save Edits</button>
        </div>
      </form>
      <a href="/">...home </a>
    </div>
  </div><!-- end of main row -->
</div><!-- end of main container -->

<% include ../partials/footer %>