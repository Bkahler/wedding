<% include ../partials/header %>
    <div id="main" class="container">
        <div class="row reds col-sm-12" id="banner-home">
            <hr>
            <h1>Sarah + Bryan</h1>
            <p>October 1, 2016</p>
            <p>Oakland, California</p>
            <hr>
        </div>
        <div class='row reds' id="rsvp-div">
        <% if(user && user.invites.length > 0){ %>
            <% if(user.invites[0].attending == null){ %>
                    <div id='rsvp-form' class=" col-sm-12">
                        <center>
                            <h1><%=user.invites[0].title %></h1> 
                        </center>
                        <form action="/invites/<%=user.invites[0]._id %>/?_method=PUT" class="form-horizontal" method='POST'>
                            <div class="form-group">
                                <div class="col-sm-offset-1 col-sm-10">
                                  <label for="invite[attending]">Attending ? </label><br>
                                  <label><input type="radio" name="invite[attending]" value="true"> Yes</label>
                                  <label><input type="radio" name="invite[attending]" value="false"> Sorry, will not be attending</label>
                                </div>
                                <div class="col-sm-offset-1 col-sm-10">
                                  <label for="invite[numberInAttendance]">Number of Guests Attending </label>
                                  <select class="form-control" name="invite[numberInAttendance]">
                                    <% for(var i=0; i <= user.invites[0].guestsAllowed; i++){ %>
                                        <option><%= i %></option>
                                    <% } %>
                                  </select>
                                </div>
                                <div class="col-sm-offset-1 col-sm-10">
                                  <label for="invite[vegetarianMeals]">Number of Vegetarian Meals </label>
                                  <select class="form-control" name="invite[vegetarianMeals]">
                                    <% for(var i=0; i <= user.invites[0].guestsAllowed; i++){ %>
                                        <option><%= i %></option>
                                    <% } %>
                                  </select>
                                </div>
                                <div class="col-sm-offset-1 col-sm-10">
                                  <label for="nvite[guestNames]">Guest Names</label>
                                  <input type="text" class="form-control" id="guest-names" name="invite[guestNames]" placeholder="Guest Names (comma separated)"> 
                                </div>
                                <div class="col-sm-offset-1 col-sm-10">
                                    <button class="btn btn-block btn-lg btn-primary"> Submit RSVP </button>
                                </div>
                            </div>
                        </form>
                    </div>

                <div class="text-center col-md-12 col-lg-12"> 
                    <button type="button" id="rsvp-toggle" class="btn btn-lg btn-primary">RSVP NOW</button>
                </div>
            <% } else { %>
                <div class="text-center col-md-12"> 
                    <h2>RSVP Received</h2>
                </div>
            <% } %>
        <% } %>
        </div>
        <div class='row reds' id='main-home'> 
            <div class"col-sm-12">
                <h3>Friday, September 30 </h3>
                <center><img src="/img/food.png"</center>
                <p>
                    Welcome Get-Together
                    Time: 7 - 10 pm
                    Location: TBD
                    Attire: Casual - come as you are, weary travelers!
                </p>
            </div>
            <div class"col-sm-12">
                <h3>Saturday, October 1</h3>
                <center><img src="/img/love.png"</center>
                <p>
                    Ceremony 
                    Time: Please arrive at 5pm, ceremony will start shortly after
                    
                    Location: Temescal Beach House, Oakland, CA
                    [link to Location Details section]
